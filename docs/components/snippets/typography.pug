include ../../mixins.pug

.page-content.page-content--fit
  h1.make-font-heading-primary Page Title (&lt;h1&gt;)
  p.paragraph Preset: heading--primary
  p.paragraph Desktop: 48px=3rem, font-face: demi (weight: bold), line-height: 1.4
  p.paragraph Mobile: 28px=1.75rem, font-face: demi (weight: bold), line-height: 1.6

.page-content.page-content--fit
  h2.make-font-heading-secondary Sub Title (&lt;h2&gt;)
  p.paragraph Preset: heading--secondary
  p.paragraph Desktop: 32px=2rem, font-face: demi (weight: bold), line-height: 1.4
  p.paragraph Mobile: 24px=1.5rem, font-face: demi (weight: bold), line-height: 1.6

.page-content.page-content--fit
  h3.make-font-heading-tertiary Headline (&lt;h3&gt;)
  p.paragraph Preset: heading--tertiary
  p.paragraph Desktop: 24px=1.5rem, font-face: demi (weight: bold), line-height: 1.4
  p.paragraph Mobile: 20px=1.25rem, font-face: demi (weight: bold), line-height: 1.6

.page-content.page-content--fit
  p.make-font-large Running Text
  p.paragraph Preset: large
  p.paragraph Desktop: 17px=1.0625rem, font-face: book (weight: normal), line-height: 1.8
  p.paragraph Mobile: 17px=1.0625rem, font-face: book (weight: normal), line-height: 1.6
  p.paragraph Attention: Design uses a 19px font and 1.6 line-height on Desktop. But the 19px font is rendered pretty weird in all browsers on Windows so we use 17px font and line-height 1.8.
  p.paragraph E.g. running text

.page-content.page-content--fit
  p.make-font-large-semibold Running Text Bold
  p.paragraph Preset: large-semibold
  p.paragraph Desktop: 17px=1.0625rem, font-face: medium (weight: @font-weight-medium = 600), line-height: 1.8
  p.paragraph Mobile: 17px=1.0625rem, font-face: medium (weight: @font-weight-medium = 600), line-height: 1.6
  p.paragraph Attention: Design uses a 19px font and 1.6 line-height on Desktop. But the 19px font is rendered pretty weird in all browsers on Windows so we use 17px font and line-height 1.8.
  p.paragraph E.g. highlighted running text

.page-content.page-content--fit
  p.make-font-medium Text Small
  p.paragraph Preset: medium
  p.paragraph Desktop: 16px=1rem, font-face: book (weight: normal), line-height: 1.6
  p.paragraph Mobile: 14px=0.875rem, font-face: book (weight: normal), line-height: 1.6

.page-content.page-content--fit
  p.make-font-medium-semibold Text Small Bold
  p.paragraph Preset: medium-semibold
  p.paragraph Desktop: 16px=1rem, font-face: medium (weight: @font-weight-medium = 600), line-height: 1.6
  p.paragraph Mobile: 14px=0.875rem, font-face: medium (weight: @font-weight-medium = 600), line-height: 1.6
  p.paragraph E.g. Icon text, sharp line

.page-content.page-content--fit
  p.make-font-small-semibold Text X-Small
  p.paragraph Preset: small-semibold
  p.paragraph Desktop: 14px=0.875rem, font-face: medium (weight: @font-weight-medium = 600), line-height: 1.6
  p.paragraph Mobile: n/a
  p.paragraph E.g. top navigation


