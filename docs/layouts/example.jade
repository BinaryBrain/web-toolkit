doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content=config.description)
    meta(name="keywords", content=config.keywords)
    meta(name="author", content=config.author)
    script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
    script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(type='text/javascript', src='/js/site.js')
  body.site
    .site__page
      header.header.header--main.l-holder
        .l-row
          .header__mobile-trigger(data-toggle='site-menu', data-target='.site')
          .header__brand.brand
            .brand__logo
            .brand__tagline.brand__tagline--de
          .header__meta
            .header__meta__upper
              .header__meta__language
                ul.menu.menu--language
                  li.menu__item
                    a(href='#').menu__link DE
                  li.menu__item
                    a(href='#').menu__link FR
                  li.menu__item
                    a(href='#').menu__link IT
                  li.menu__item
                    a(href='#').menu__link EN
              .header__meta__menu
                ul.menu.menu--meta
                  li.menu__item.is-active
                    a(href='#').menu__link Individuals
                  li.menu__item
                    a(href='#').menu__link Small Business Insurance
                  li.menu__item
                    a(href='#').menu__link Business
            .header__meta__lower
              .header__meta__social
                ul.menu.menu--social
                  li.menu__item
                    a(href='http://facebook.com') Facebook
                  li.menu__item
                    a(href='http://twitter.com') Twitter
              .header__meta__welcome
                ul
                  li.header__meta__welcome__item Welcome to AXA
                  li.header__meta__welcome__item
                    a(href='tel:0800809809') 0800 809 809

      nav.l-holder
        .l-row
          ul.menu.menu--main
            li.menu__item
              a(href='#1').menu__link Menu Item 1
            li.menu__item
              a(href='#2').menu__link Menu Item 2
            li.menu__item
              a(href='#3').menu__link Menu Item 3
            li.menu__item
              a(href='#4').menu__link Menu Item 4

      section.l-holder
        .l-row
          .l-full!= contents

      footer.footer
        .footer__content.l-holder
          .footer__content__inner.l-row
            .l-third
              h3 Keep In Touch
              ul.footer-menu
                li.footer-menu__item
                  a.footer-menu__link(href="#facebook") Facebook
                li.footer-menu__item
                  a.footer-menu__link(href="#twitter") Twitter
                li.footer-menu__item
                  a.footer-menu__link(href="#youtube") YouTube
                li.footer-menu__item
                  a.footer-menu__link(href="#linkedin") LinkedIn

            .l-third
              h3 AXA & You
              ul.footer-menu
                li.footer-menu__item
                  a.footer-menu__link(href="#contact-us") Contact Us
                li.footer-menu__item
                  a.footer-menu__link(href="#help-and-advice") Help & Advice
                li.footer-menu__item
                  a.footer-menu__link(href="#latest-news") Latest News
                li.footer-menu__item
                  a.footer-menu__link(href="#jobs") Jobs

            .l-third
              h3 AXA Worldwide
              ul.worldwide
                li.worldwide__item
                  a.worldwide__link.worldwide__link--world(href="#axa-com", title="AXA International") AXA.com
                li.worldwide__item
                  a.worldwide__link.worldwide__link--switzerland(href="#axa-ch", title="AXA Switzerland") AXA.ch

        .footer__copyline.l-holder
          .footer__copyline__inner.l-row
            .l-full
              ul.copyline-menu
                li.copyline-menu__item
                  a.copyline-menu__link(href="#sitemap") Sitemap
                li.copyline-menu__item
                  a.copyline-menu__link(href="#privacy") Privacy
                li.copyline-menu__item
                  a.copyline-menu__link(href="#disclaimer") Disclaimer
                li.copyline-menu__item
                  span.copyline-menu__text AXA 2014 ©

    .site__mobile-menu
      nav.menu.menu--mobile
        ul.menu__level.is-previous
          li.menu__item.is-active
            a(href='#1').menu__link Menu Item 1
            ul.menu__level.is-current
              li.menu__item.menu__item--back
                a(href='#1').menu__link Zurück 1
              li.menu__item.is-active
                a(href='#1').menu__link Menu Item 1.1
              li.menu__item
                a(href='#2').menu__link Menu Item 1.2
              li.menu__item
                a(href='#3').menu__link Menu Item 1.3
              li.menu__item
                a(href='#4').menu__link Menu Item 1.4
              li.menu__item
                a(href='#4').menu__link Menu Item 1.5
              li.menu__item
                a(href='#4').menu__link Menu Item 1.6
              li.menu__item
                a(href='#4').menu__link Menu Item 1.7
              li.menu__item
                a(href='#4').menu__link Menu Item 1.8
          li.menu__item
            a(href='#2').menu__link Menu Item 2
            ul.menu__level
              li.menu__item.menu__item--back
                a(href='#1').menu__link Zurück 2
              li.menu__item
                a(href='#1').menu__link Menu Item 2.1
              li.menu__item
                a(href='#2').menu__link Menu Item 2.2
              li.menu__item
                a(href='#3').menu__link Menu Item 2.3
              li.menu__item
