doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content=config.description)
    meta(name="keywords", content=config.keywords)
    meta(name="author", content=config.author)
  body
    header.header.header--main.l-holder
      .l-row
        .header__mobile-trigger
        .header__brand.brand
          .brand__logo
          .brand__tagline.brand__tagline--de
        .header__meta
          .header__meta__upper
            .header__meta__language.menu.menu--language
              ul
                li.menu__item
                  a(href='#') DE
                li.menu__item
                  a(href='#') FR
                li.menu__item
                  a(href='#') IT
                li.menu__item
                  a(href='#') EN
            .header__meta__menu.menu.menu--meta
              ul
                li.menu__item.is-active
                  a(href='#') Individuals
                li.menu__item
                  a(href='#') Small Business Insurance
                li.menu__item
                  a(href='#') Business
          .header__meta__lower
            .header__meta__social.menu.menu--social
              ul
                li.menu__item
                  a(href='http://facebook.com') Facebook
                li.menu__item
                  a(href='http://twitter.com') Twitter
            .header__meta__welcome
              ul
                li.header__meta__welcome__item Welcome to AXA
                li.header__meta__welcome__item
                  a(href='tel:0800809809') 0800 809 809

    nav.l-holder
      .l-row
        .menu.menu--main
          ul
            li.menu__item
              a(href='#1') Menu Item 1
            li.menu__item
              a(href='#2') Menu Item 2
            li.menu__item
              a(href='#3') Menu Item 3
            li.menu__item
              a(href='#4') Menu Item 4

    section.l-holder
      .l-row
        .l-full!= contents

    footer.footer
      .footer__content.l-holder
        .footer__content__inner.l-row
          .l-third
            h3 Keep In Touch
            ul.footer-menu
              li.footer-menu__item
                a.footer-menu__link(href="#facebook") Facebook
              li.footer-menu__item
                a.footer-menu__link(href="#twitter") Twitter
              li.footer-menu__item
                a.footer-menu__link(href="#youtube") YouTube
              li.footer-menu__item
                a.footer-menu__link(href="#linkedin") LinkedIn

          .l-third
            h3 AXA & You
            ul.footer-menu
              li.footer-menu__item
                a.footer-menu__link(href="#contact-us") Contact Us
              li.footer-menu__item
                a.footer-menu__link(href="#help-and-advice") Help & Advice
              li.footer-menu__item
                a.footer-menu__link(href="#latest-news") Latest News
              li.footer-menu__item
                a.footer-menu__link(href="#jobs") Jobs

          .l-third
            h3 AXA Worldwide
            ul.worldwide
              li.worldwide__item
                a.worldwide__link.worldwide__link--world(href="#axa-com", title="AXA International") AXA.com
              li.worldwide__item
                a.worldwide__link.worldwide__link--switzerland(href="#axa-ch", title="AXA Switzerland") AXA.ch

      .footer__copyline.l-holder
        .footer__copyline__inner.l-row
          .l-full
            ul.copyline-menu
              li.copyline-menu__item
                a.copyline-menu__link(href="#sitemap") Sitemap
              li.copyline-menu__item
                a.copyline-menu__link(href="#privacy") Privacy
              li.copyline-menu__item
                a.copyline-menu__link(href="#disclaimer") Disclaimer
              li.copyline-menu__item
                span.copyline-menu__text AXA 2014 Â©
