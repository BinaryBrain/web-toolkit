              li.menu__item
                a(href='#2').menu__link Menu Item 3.2
              li.menu__item
                a(href='#3').menu__link Menu Item 3.3
              li.menu__item
                a(href='#4').menu__link Menu Item 3.4
          li.menu__item
            a(href='#4').menu__link Menu Item 4
            ul.menu__level
              li.menu__item.menu__item--back
                a(href='#1').menu__link Zurück 4
              li.menu__item
