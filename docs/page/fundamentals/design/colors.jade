h2.heading.heading--secondary Primary palette

.color-palette
  .l-row
    each colorCode, colorName in colors.primary
      .l-fourth
        .color-palette__color
          .color-palette__color__box(style='background: ' + colorCode)
          .color-palette__color__content
            .color-palette__color__code(data-clipboard-text=colorCode) #{colorCode}
            .color-palette__color__less(data-clipboard-text='@color-' + colorName) @color-#{colorName}

h2.heading.heading--secondary Secondary palette

.color-palette
  each colorGroup in colors.secondary
    .l-row
      each colorCode, colorName in colorGroup.colors
        .l-thumbnail
            .color-palette__color.color-palette__color--secondary
              .color-palette__color__box.color-palette__color__box--secondary(style='background: ' + colorCode)
              .color-palette__color__content
                .color-palette__color__code(data-clipboard-text=colorCode) #{colorCode}
                .color-palette__color__less(data-clipboard-text='@color-' + colorName) @color-#{colorName}

