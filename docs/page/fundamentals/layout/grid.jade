title: Grid
order: 1
template: page.jade
---
input(type='text', value='100%')#widthIn

script.
  $(function() {
    var $in = $("#widthIn");
    var $container = $("#container");

    $in.keyup(function() {
      $container.css({
        'width': $in.val()
      });
    })
  })

#container
  each j in [1, 2, 3, 4, 6, 12]
    .l-row
      - for (var i = 0; i < 12/j; i++) {
        div.l-col(class='l-col--' + (j))
          .grid-box #{j}
      - }

.hr
      
#container2
  .l-row
    .grid-offset-col
      .grid-box offset: 3, columns: 3
    .grid-offset-col
      .grid-box offset: 3, columns: 3

.hr

